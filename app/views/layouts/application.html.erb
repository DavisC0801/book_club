<!DOCTYPE html>
<html>
  <head>
    <title>BookClub</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if !@hide_nav %>
      <nav>
        <%= link_to "Home", root_path %>
        <%= link_to "Browse All Books", books_path %>
      </nav>
    <% end %>

    <% if flash[:notice] %>
      <p id="flash"><%= flash[:notice] %></p>
    <% end %>
    
    <%= yield %>
  </body>
</html>
