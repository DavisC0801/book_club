<h1>New Book</h1>
<%= form_for @book do |f| %>

  <%= f.label :title%>
  <%= f.text_field :title, type: :text, required: true %>
  <br>
  <%= f.label :year_published %>
  <%= f.text_field :year_published, type: :number, required: true%>
  <br>
  <%= f.label :page_count %>
  <%= f.text_field :page_count, type: :number, required: true %>
  <br>
  <%= f.label :thumbnail %>
  <%= f.text_field :thumbnail, type: :url %>
  <br>
  <%= f.label :authors %>
  <%= f.text_field :authors, type: :text, required: true, value: ''%>
  <br>
  <%= f.submit %>
<% end %>
