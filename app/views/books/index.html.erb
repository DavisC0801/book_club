<div id="sort-bar">
  Sort by:
  <%= link_to "average rating (lowest to highest)", "#{books_path}?sort=rating-asc" %>
  <%= link_to "average rating (highest to lowest)", "#{books_path}?sort=rating-desc" %>
  <%= link_to "number of pages (lowest to highest)", "#{books_path}?sort=pages-asc" %>
  <%= link_to "number of pages (highest to lowest)", "#{books_path}?sort=pages-desc" %>
  <%= link_to "number of reviews (lowest to highest)", "#{books_path}?sort=reviews-asc" %>
  <%= link_to "number of reviews (highest to lowest)", "#{books_path}?sort=reviews-desc" %>
</div>
<div id="statistics">
  <h3>Statistics</h3>
  <div id="highest-rated" class="stats">
    <h4>Highest Rated Books</h4>
    <ol>
      <% @highest_rated_books.each do |book| %>
        <li>
          <%= link_to book.title, book_path(book) %>
          Average rating: <%= book.average_rating %>
          <!-- delete line above after rewriting tests to use fancy-rating below instead -->
          <div class="fancy-rating">
            <div class="star-filling-bar" style="width:<%= (book.average_rating / 5.0 * 100).round(0).to_i %>%;"></div>
            <%= image_tag "stars.gif", alt: "stars", class: "stars" %>
          </div>
        </li>
      <% end %>
    </ol>
  </div>
  <div id="lowest-rated" class="stats">
    <h4>Lowest Rated Books</h4>
    <ol>
      <% @lowest_rated_books.each do |book| %>
        <li>
          <%= link_to book.title, book_path(book) %>
          Average rating: <%= book.average_rating %>
          <!-- delete line above after rewriting tests to use fancy-rating below instead -->
          <div class="fancy-rating">
            <div class="star-filling-bar" style="width:<%= (book.average_rating / 5.0 * 100).round(0).to_i %>%;"></div>
            <%= image_tag "stars.gif", alt: "stars", class: "stars" %>
          </div>
        </li>
      <% end %>
    </ol>
  </div>
  <div id="most-reviews" class="stats">
    <h4>Users with Most Reviews Written</h4>
    <ol>
      <% @most_review_users.each do |user| %>
        <li>
          <%= link_to user.username, user_path(user) %>
          <%= user.reviews_count %> reviews
        </li>
      <% end %>
    </ol>
  </div>
</div>
<%= link_to "Add new book", new_book_path, { :class => "btn btn-primary"} %>
<br><br>
<div id="book-list">
  <% @books.each do |book| %>
    <div id="book-<%= book.id %>" class="card mb-3 book-info">
      <div class="row no-gutters">
        <div class="col-md-3">
          <%= image_tag book.thumbnail, alt: "Cover of #{book.title}", class: "card-img" %>
        </div>
        <div class="col-md-9">
          <div class="card-body">
            <h5 class="card-title"><%= link_to book.title, book_path(book) %></h5>
            <p class="card-text">
              Author(s):
              <% if book.author_count == 0 %>
                unknown
              <% end %>
              <% book.authors.each do |author| %>
              <%= link_to author.name, author_path(author) %><%= ", " if author != book.authors.last %>
              <% end %>
            </p>
            <p class="card-text">Average Rating: <%= book.average_rating %></p>
            <!-- delete line above after rewriting tests to use fancy-rating below instead -->
            <div class="fancy-rating">
              <div class="star-filling-bar" style="width:<%= (book.average_rating / 5.0 * 100).round(0).to_i %>%;"></div>
              <%= image_tag "stars.gif", alt: "stars", class: "stars" %>
            </div>
            <p class="card-text"><%= book.review_count %> reviews</p>
            <p class="card-text"><%= book.page_count %> pages</p>
            <p class="card-text">Published in <%= book.year_published.abs %><%= " BC" if book.year_published < 0 %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
