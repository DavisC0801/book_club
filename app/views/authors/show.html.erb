<h1><%= @author.name %></h1>
<div id="book-list">
  <h2>Books:</h2>
  <% if @author.book_count == 0 %>
    <p>This author has no books in the database.</p>
  <% end %>
  <% @author.books.each do |book|%>
    <div id="book-<%= book.id %>">
      <%= image_tag book.thumbnail, alt: "Cover of #{book.title}" %>
      <h3><%= link_to book.title, book_path(book) %></h3>
      <% if book.author_count > 1 %>
        <p>
          Co-authored by
          <% book.coauthors(@author).each_with_index do |coauthor, i| %>
            <%= link_to coauthor.name, author_path(coauthor) %><%= ", " if i < book.author_count - 2 %>
          <% end %>
        </p>
      <% end %>
      <p><%= book.page_count %> pages</p>
      <p>Published in <%= book.year_published.abs %><%= " BC" if book.year_published < 0 %></p>
    </div>
  <% end %>
</div>
<div id="delete">
  <%= button_to('Delete Author', author_path(@author),
          method: "delete",
          data: { confirm: 'Are you sure?', disable_with: 'loading...' },
          class: "btn btn-primary")
  %>
</div>
